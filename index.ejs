<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SDA Lab practice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Laptops</h1>
            <a class="btn btn-primary" href="/save">Add Laptop</a>
        </div>
        <table class="table table-bordered tower-hower">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Specs</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% laptops.forEach((laptop)=>{ %>
                    <tr>
                        <td><%= laptop.name %></td>
                        <td><%= laptop.brand %></td>
                        <td><%= laptop.price %></td>
                        <td><%= laptop.specs %></td>
                        <td>
                            <a href="/edit/<%= laptop._id %>" class="btn btn-sn btn-primary">Edits</a>
                            <a href="/delete/<%= laptop._id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
  </body>
</html>